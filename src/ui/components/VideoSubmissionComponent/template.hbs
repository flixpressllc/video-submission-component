<div>
  {{#if steps.one}}
    <FileChooser @onFileChosen={{action handleFileChosen}} accept="video/*">
      Pick a file
    </FileChooser>
  {{/if}}

  {{#if steps.two}}
    <div class="field">
      <label for="name">First Name</label>
      <input type="text" id="name" oninput={{action nameChanged}} value={{name}}/>
    </div>

    <div class="field">
      <label for="email">Email Address</label>
      <input type="text" id="email" oninput={{action emailChanged}} value={{email}}/>
    </div>

    {{#if noName}}
      <p class="info">
        If you do not provide your name, we cannot personalize your video.
      </p>
    {{/if}}
    {{#if noEmail}}
      <p class="info">
        If you do not provide an email address, we can not send you a link when
        your video is done processing.
      </p>
    {{/if}}
    <div class="field">
      <button type="button" onclick={{action submitData}}>Submit</button>
    </div>
  {{/if}}

  {{#if steps.three}}
    <DataUploader @name={{name}} @email={{email}} @file={{file}} @onComplete={{action handleDataUploaded}} @uploadUrl={{uploadUrl}} @submitUrl={{submitUrl}} />
  {{/if}}

  {{#if steps.four}}
    Your video has uploaded!
  {{/if}}

</div>
